<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <Button
            android:id="@+id/btn_item_beer_add"
            android:layout_width="56dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:background="@drawable/add_btn_background"
            android:textAllCaps="false"
            android:text="@string/add" />

        <ImageView
            android:id="@+id/iv_item_beer_icon"
            android:layout_width="56dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_beer0" />

        <TextView
            android:id="@+id/tv_item_beer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/iv_item_beer_icon"
            android:layout_toStartOf="@id/btn_item_beer_add"
            android:text="Beer name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_beer_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_beer_name"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/iv_item_beer_icon"
            android:layout_toStartOf="@id/btn_item_beer_add"
            android:textStyle="italic"
            android:text="Beer Style"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_beer_alcohol_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_beer_style"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/iv_item_beer_icon"
            android:layout_toStartOf="@id/btn_item_beer_add"
            android:text="Beer alcohol_content"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>